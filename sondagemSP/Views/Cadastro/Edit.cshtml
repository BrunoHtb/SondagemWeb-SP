@model IEnumerable<sondagemSP.Models.Cadastro>
@{
    ViewData["Title"] = "Edidar";
}
<h1>Tela de Edição</h1>

<div class="container mt-4">

    <form asp-action="Edit">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="cadastro-nome">Cadastro</label>
                <input asp-for="@Model.First().Nome" type="text" class="form-control" id="cadastro-nome" value="@Model.First().Nome">
            </div>
            <div class="form-group col-md-6">
                <label for="item-superintendencia">Superintendência</label>
                <select asp-for="@Model.First().Regional" asp-items="@ViewBag.RegionalList" class="form-select"></select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="cadastro-nome">Subtrecho</label>
                <input asp-for="@Model.First().Subtrecho" type="text" class="form-control" id="cadastro-subtrecho" value="@Model.First().Subtrecho">
            </div>
            <div class="form-group col-md-6">
                <label for="item-superintendencia">Estaca</label>
                <input asp-for="@Model.First().Estaca" type="text" class="form-control" id="cadastro-estaca" value="@Model.First().Estaca">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

</div>